{
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "plugin:import/recommended",
        "plugin:import/typescript"
    ],
    "plugins": [
        "@stylistic/eslint-plugin"
    ],
    "settings": {
        "import/resolver": {
            "typescript": true,
            "node": true
        }
    },
    "rules": {
        "@stylistic/indent": [
            "error",
            4
        ],
        "@stylistic/quotes": [
            "error",
            "double"
        ],
        "@stylistic/semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/consistent-type-imports": [
            "error",
            {
                "prefer": "type-imports",
                "fixStyle": "inline-type-imports"
            }
        ]
    }
}